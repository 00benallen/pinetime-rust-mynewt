{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Apache Mynewt",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " scripts/install-windows.sh "
                ]
            },
            "osx": {
                "command": 
                " scripts/install-mac.sh "
            },
            "linux": {
                "command": 
                " scripts/install-linux.sh "
            },
            "problemMatcher": [
            ]
        },
        {
            "label": "1Ô∏è‚É£ Build bluepill_boot",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt build -v bluepill_boot && newt size -v bluepill_boot "
                ]
            },
            "osx": {
                "command": 
                " newt build -v bluepill_boot && newt size -v bluepill_boot "
            },
            "linux": {
                "command": 
                " newt build -v bluepill_boot && newt size -v bluepill_boot "
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "2Ô∏è‚É£ Build bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt build -v bluepill_my_sensor && newt size -v bluepill_my_sensor "
                ]
            },
            "osx": {
                "command": 
                " newt build -v bluepill_my_sensor && newt size -v bluepill_my_sensor "
            },
            "linux": {
                "command": 
                " newt build -v bluepill_my_sensor && newt size -v bluepill_my_sensor "
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "3Ô∏è‚É£ Image bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt create-image -v bluepill_my_sensor 1.0.0 && newt size -v bluepill_my_sensor "
                ]
            },
            "osx": {
                "command": 
                " newt create-image -v bluepill_my_sensor 1.0.0 && newt size -v bluepill_my_sensor "
            },
            "linux": {
                "command": 
                " newt create-image -v bluepill_my_sensor 1.0.0 && newt size -v bluepill_my_sensor "
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "4Ô∏è‚É£ Load bluepill_boot",
            "type": "shell",
            "windows": {
                "command": 
                " c:\\openocd\\bin\\openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-boot.ocd "
            },
            "osx": {
                "command": 
                " newt load -v bluepill_boot "
            },
            "linux": {
                "command": 
                " newt load -v bluepill_boot "
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "5Ô∏è‚É£ Load bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": 
                " c:\\openocd\\bin\\openocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-app.ocd "
            },
            "osx": {
                "command": 
                " newt load -v bluepill_my_sensor "
            },
            "linux": {
                "command": 
                " newt load -v bluepill_my_sensor "
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "üí£ Debug bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt debug -v bluepill_my_sensor ",
                    //  "-n",
                ]
            },
            "osx": {
                "command": 
                " newt debug -v bluepill_my_sensor "
            },
            "linux": {
                "command": 
                " newt debug -v bluepill_my_sensor "
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "üóë Clean",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt clean -v all "
                ]
            },
            "osx": {
                "command": 
                " newt clean -v all "
            },
            "linux": {
                "command": 
                " newt clean -v all "
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}