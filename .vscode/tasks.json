{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            //  Combined install command to install VSCode Extensions and Mynewt.
            "label": "0Ô∏è‚É£ Install Apache Mynewt",
            "dependsOn": [
                "Install Extensions", 
                "Install Mynewt"
            ]
        },
        {
            "label": "1Ô∏è‚É£ Build bluepill_boot",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt build -v bluepill_boot && newt size -v bluepill_boot && echo Done! "
                ]
            },
            "osx": {
                "command": 
                " newt build -v bluepill_boot && newt size -v bluepill_boot && echo Done! "
            },
            "linux": {
                "command": 
                " newt build -v bluepill_boot && newt size -v bluepill_boot && echo Done! "
            },
            "problemMatcher": [
            ]
        },
        {
            "label": "2Ô∏è‚É£ Build bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt build -v bluepill_my_sensor && newt size -v bluepill_my_sensor && echo Done! "
                ]
            },
            "osx": {
                "command": 
                " newt build -v bluepill_my_sensor && newt size -v bluepill_my_sensor && echo Done! "
            },
            "linux": {
                "command": 
                " newt build -v bluepill_my_sensor && newt size -v bluepill_my_sensor && echo Done! "
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
            ]
        },
        {
            "label": "3Ô∏è‚É£ Image bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt create-image -v bluepill_my_sensor 1.0.0 && newt size -v bluepill_my_sensor && echo Done! "
                ]
            },
            "osx": {
                "command": 
                " newt create-image -v bluepill_my_sensor 1.0.0 && newt size -v bluepill_my_sensor && echo Done! "
            },
            "linux": {
                "command": 
                " newt create-image -v bluepill_my_sensor 1.0.0 && newt size -v bluepill_my_sensor && echo Done! "
            },
            "problemMatcher": [
            ]
        },
        {
            "label": "4Ô∏è‚É£ Load bluepill_boot",
            "type": "shell",
            "windows": {
                "command": 
                " c:\\openocd\\bin\\openocd -f scripts/flash-init.ocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-boot.ocd "
            },
            "osx": {
                "command": 
                // Previously: " newt load -v bluepill_boot && echo Done! "
                " openocd -f scripts/flash-init.ocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-boot.ocd "
            },
            "linux": {
                "command": 
                // Previously: " newt load -v bluepill_boot && echo Done! "
                " openocd -f scripts/flash-init.ocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-boot.ocd "
            },
            "problemMatcher": [
            ]
        },
        {
            "label": "5Ô∏è‚É£ Load bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": 
                " c:\\openocd\\bin\\openocd -f scripts/flash-init.ocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-app.ocd "
            },
            "osx": {
                "command": 
                // Previously: " newt load -v bluepill_my_sensor && echo Done! "
                " openocd -f scripts/flash-init.ocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-app.ocd "
            },
            "linux": {
                "command": 
                // Previously: " newt load -v bluepill_my_sensor && echo Done! "
                " openocd -f scripts/flash-init.ocd -f interface/stlink-v2.cfg -f target/stm32f1x.cfg -f scripts/flash-app.ocd "
            },
            "problemMatcher": [
            ]
        },
        /*  For debug we now use the Cortex Debug Extension.
        {
            "label": "üí£ Debug bluepill_my_sensor",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt debug -v bluepill_my_sensor ",
                    //  "-n",
                ]
            },
            "osx": {
                "command": 
                " newt debug -v bluepill_my_sensor "
            },
            "linux": {
                "command": 
                " newt debug -v bluepill_my_sensor "
            },
            "problemMatcher": [
            ]
        },
        */
        {
            //  Remove all compiled files.
            "label": "üóë Clean",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " newt clean -v all && echo Done! "
                ]
            },
            "osx": {
                "command": 
                " newt clean -v all && echo Done! "
            },
            "linux": {
                "command": 
                " newt clean -v all && echo Done! "
            },
            "problemMatcher": [
            ]
        },
        {
            //  Install VSCode Extensions.
            "label": "Install Extensions",
            "type": "shell",
            "windows": {
                "command": 
                " scripts\\install-ext-windows.cmd "
            }
        },
        {
            //  Install Mynewt source, build tools, sample.
            "label": "Install Mynewt",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c", "-l",
                    " scripts/install-windows.sh "
                ]
            },
            "osx": {
                "command": 
                " scripts/install-mac.sh "
            },
            "linux": {
                "command": 
                " scripts/install-linux.sh "
            },
            "problemMatcher": [
            ]
        },
    ]
}
